<div class="page-heading-one">
  <h2 id="mentors-header" class="">Mentors</h2>
</div>
<h1>Mentor Appointments Available for:</h1>
<div class = "container">
  <div class="ui-50">
    <div class = "row">
      <div class="col-md-3 col-sm-4 col-xs-12 bor">
        <div class="ui-item bg-red">
          <h4 class="rotate-right"><span><%= @mentor.full_name %></span></h4>
          <%= image_tag "#{@mentor.photo}", class: "img-responsive" %>
          <h4><%= @mentor.bio %></h4>
          <h4><%= @mentor.email %></h4>
            <div class="ui-icons">
              <!-- Email Icon -->
              <a href="mailto:"#{mentor.email} class="b-tooltip" title="Email"><i class="fa fa-envelope"></i></a>
              <!-- Phone Icon -->
              <!-- <a href="#" class="b-tooltip" title="Phone"><i class="fa fa-phone"></i></a>&nbsp;&nbsp; -->
              <!-- Facebook Icon -->
              <a href="#" class="b-tooltip" title="Facebook"><i class="fa fa-facebook"></i></a>&nbsp;&nbsp;
              <!-- Twitter Icon -->
              <a href="#" class="b-tooltip" title="Twitter"><i class="fa fa-twitter"></i></a> 
            </div> 
            
        </div>
      </div>
    </div>
  </div>
            <div class="row">
              <div class="col-md-6">
                <h1>Add Appointments:</h1>
                <%= form_tag appointments_path do %>
                  <div>
                    <%= label_tag 'Date' %>
                    <%= text_field_tag :date_start_time %>
                  </div>
                  <div>
                    <%= label_tag 'Duration in Minutes' %>
                    <%= text_field_tag :duration %>
                  </div>
                  <%= hidden_field_tag :mentor_id, @mentor.id %>
                  <div>
                    <%= submit_tag "Add Appointments" %>
                  </div>
                <% end %>
              </div>

              <div ng-app="app">
  <div ng-controller="appointmentsCtrl">

    <div class="new_appointment_form">
      <h1>New Appointments</h1>

      <div class="form_field">
        <label>Event Date: </label><input ng-model="newDateStartTime">
      </div>
      
      <div class="form_field">
        <label>Appointments Duration: </label><input ng-model="newDuration">
      </div>

      <button ng-click="createAppointment(newDateStartTime, newDuration, newMentorName)">Create Appointment</button>
    </div> <!-- appointment form -->

  </div> <!-- ng-controller -->
</div> <!-- ng-app -->
            </div>

</div>