<% if user_signed_in? && current_user.admin? %>
<%= form_for @mentor do |f| %>
<div class = "container">
				<u><h1>ALL INFORMATION IS REQUIRED!</h1></u>
<div class ="row">
	<div class="col-md-3 col-sm-4 col-xs-12 bor">
    <div class="ui-item bg-blue">
			<div class="panel-heading">
				<h3 class="panel-title">First Name</h3>
			</div>
				<div class="panel-body">
						<%= f.text_field :first_name, :required => true %>
				</div>
		</div>

		<div class="ui-item bg-blue">
			<div class="panel-heading">
		  	<h3 class="panel-title">Last Name</h3>
			</div>
				<div class="panel-body">
				 	<%= f.text_field :last_name, :required => true %>
				</div>
		</div>	

		<div class="ui-item bg-blue">
			<div class="panel-heading">
		  	<h3 class="panel-title">Email</h3>
			</div>
				<div class="panel-body">
				 	<%= f.text_field :email, :required => true %>
				</div>
		</div>	
	</div>
	<div class="col-sm-4">
		<div class="ui-item bg-blue">
			<div class="panel-heading">
		  	<h3 class="panel-title">Bio</h3>
			</div>
				<div class="panel-body">
				 	<%= f.text_area :bio, :required => true %>
				</div>
		</div>
		<div class="ui-item bg-blue">
			<div class="panel-heading">
		  	<h3 class="panel-title">Photo</h3>
			</div>
			<h4>Current Photo</h4><%= image_tag @mentor.photo_url , class: "img-responsive" %>
				<div class="panel-body">
				 	<%= f.file_field :photo, :required => true %>
				</div>
		</div>
		<div class="ui-item bg-blue">
			<div class="panel-heading">
		  	<h3 class="panel-title">Category</h3>
			</div>
				<div class="panel-body">
					<% @categories.each do |category| %>						
							<%= f.label category.name %>
							<%= f.radio_button(:category_id, category.id, :required => true) %>
					<% end %>
				</div>
		</div>

		<div>
			<%= f.submit "Submit", class: "btn btn-danger" %>
		</div>
	</div>
</div>
<% end %>
<% end %>